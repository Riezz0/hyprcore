#Font
font_family MesloLGL Nerd Font Mono
font_size 13.0

#Colors
include ~/.cache/wal/colors-kitty.conf

#Tabs
tab_bar_min_tabs            1
tab_bar_edge                bottom
tab_bar_style               powerline
tab_powerline_style         slanted
active_tab_foreground       #160909
active_tab_background       #1a6501
inactive_tab_foreground     #3d3c3d
inactive_tab_background     #160909

#Binds
map ctrl+t new_tab
map ctrl+x close_tab
map ctrl+] next_tab
map ctrl+[ previous_tab
map ctrl+1 goto_tab 1
map ctrl+2 goto_tab 2
map ctrl+3 goto_tab 3
map ctrl+4 goto_tab 4
map ctrl+5 goto_tab 5

